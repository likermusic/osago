{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",
    "target": "es2017",
    "isolatedModules": false,
    "noEmit": false,
    "moduleResolution": "node",
    "types": ["node", "./src/types"]
  },
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  },
  "include": ["./src/server/**/*.ts"],
  "exclude": ["./src/**/*.spec.ts"]
}
